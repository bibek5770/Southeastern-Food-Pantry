@model SePantry_1.Models.Active_Product

@{
    ViewBag.Title = "Product Inventory- Product Details";
}

<h2>Product Inventory - Product details</h2>
<br />

<div class="form-horizontal">
    <hr />
    <div class="form-group">
        @Html.HiddenFor(model => model.Id)
    </div>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.DisplayFor(model => model.category)
        <div class="col-md-3">
            @Html.DisplayNameFor(model => model.category)
        </div>
    </div>

    <div class="form-group">
        @Html.DisplayFor(model => model.product_code)
        <div class="col-md-3">
            @Html.DisplayNameFor(model => model.product_code)
        </div>
    </div>
    
    <div class="form-group">
        @Html.DisplayFor(model => model.title)
        <div class="col-md-3">
            @Html.DisplayNameFor(model => model.title)
        </div>
    </div>

    <div class="form-group">
        @Html.DisplayFor(model => model.manufacturer)
        <div class="col-md-3">
            @Html.DisplayNameFor(model => model.manufacturer)
        </div>
    </div>

    <div class="form-group">
        @Html.DisplayFor(model => model.isCanned)
        <div class="col-md-3">
            @Html.DisplayNameFor(model => model.isCanned)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-3 col-md-20">
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>


<style>
    footer {
        position: fixed;
    }
</style>