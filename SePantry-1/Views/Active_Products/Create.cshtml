@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    $('#donor_id').removeAttr("type");
    $(".id-autocom").on("click", donor_id_autocomplete());

    function donor_id_autocomplete(){
        $(".id-autocom").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: '@Url.Action("autocomplete_donor", "Active_Products")',
                    dataType: "json",
                    data: { term: request.term },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return {
                                label: item.FirstName + " " + item.LastName,
                                id: item.Id
                            };
                        }));
                    }
                });
            },
            minLength: 2,
            select: function (event, ui) {
                $('#donor_id').val(ui.item.id);
                //alert("ID : " + $('.id-autocom').val());
            }
        });
    }
</script>