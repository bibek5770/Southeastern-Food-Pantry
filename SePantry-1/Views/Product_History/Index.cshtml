                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.manufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isCanned)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCheckedOut)
            </td>
